@page
@model PlanModel
<h1>Your Plan</h1>

<div class="row">
	@foreach (var recipe in Model.Recipes)
	{
		<div class="col 2">
			<div class="card">
				<div class="card blue-grey darken-1">
					<div class="card-content white-text">
						<span class="card-title">@recipe.Name</span>
						<ul>
							@foreach (var ingedient in @recipe.Ingredients)
							{
							<li>@ingedient.Amount @ingedient.Measurement of @ingedient.Type</li>
							}
						</ul>
					</div>
					<div class="card-action">
						<a href="#">View Instructions</a>
					</div>
				</div>
			</div>
		</div>
	}
</div>